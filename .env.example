# Backend Environment Variables
# Copy this file to backend/.env and fill in your actual values

# Server Configuration
PORT=3001
NODE_ENV=development

# OpenAI API
OPENAI_API_KEY=your_key_here

# Anthropic API
ANTHROPIC_API_KEY=your_key_here

# AI Backend Selection
AI_BACKEND=openai  # or 'anthropic'

# Audio Retention
AUDIO_RETENTION_DAYS=30

# ServiceNow Integration
SERVICENOW_INSTANCE_URL=your_instance.service-now.com
SERVICENOW_CLIENT_ID=your_oauth_client_id
SERVICENOW_CLIENT_SECRET=your_oauth_client_secret
SERVICENOW_USERNAME_FIELD=your.username  # Your username in ServiceNow (used to filter your resource allocations)
